<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.ferit.mdudjak.tasky.MainActivity"
    android:background="@color/itemColor"
    >

    <ListView
        android:id="@+id/lvTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bNewTask"

        />

        <Button
            android:id="@+id/bNewTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.5"
            android:text="@string/newTaskButtonText"
            android:background="@color/itemColor"
            android:textColor="@color/itemTextColor"
            />


</RelativeLayout>
