<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.ferit.mdudjak.tasky.NewCategory">

    <TextView
        android:id="@+id/titleOfAddCategoryActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleOfAddCategoryActivity"
        android:textSize="@dimen/titleSize"
        android:gravity="center"
        android:layout_marginBottom="@dimen/marginBottomOfTitle"/>

    <EditText
        android:id="@+id/etxtAddCategoryActivityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleOfAddCategoryActivity"
        android:hint="@string/hintOfAddCategoryEditText"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textOfAddCategoryActivityButton"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        />

</RelativeLayout>
